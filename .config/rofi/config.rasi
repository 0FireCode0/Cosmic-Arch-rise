configuration{
    location: 0;
    modes: "run,drun,window";
    show-icons: true;
    icon-theme: "Papirus";
    terminal: "alacritty";
    font: "JetBrainsMono Nerd Font 14";
    drun-display-format: "{name} [{generic}]";
    matching: "fuzzy";
    display-window: "Windows";
    display-drun: "Apps";
    display-run: "Run";
    sidebar-mode: true;
    fixed-num-lines: false;
}

@theme "~/.config/rofi/theme.rasi"
